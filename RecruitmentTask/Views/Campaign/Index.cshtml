@model IEnumerable<RecruitmentTask.Models.Campaign>
@{
    var data = (EmeraldAccount)ViewData["EmeraldAccount"]!;
    ViewData["Title"] = "Campaigns";
}
<div class="container p-3">
<div class="row pt-4">
    <div class="col-4">
        <h2 class="text-primary">Campaigns List</h2>
    </div>
    <div class="col-4">
        <h2>Actual balance: @data.Funds</h2>
    </div>
    <div class="col-4 text-end" >
        <a asp-controller="Campaign" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> &nbsp; Create New Campaign
        </a>
    </div>
</div>
    <br/> <br/>
    <table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Keywords)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BidAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CampaignFund)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Town)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Radius)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr style="vertical-align: middle">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Keywords)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BidAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CampaignFund)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Town)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Radius)
            </td>
            <td class="text-end">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary" style="width: 100px">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary" style="width: 100px">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
</div>
