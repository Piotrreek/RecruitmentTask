@model RecruitmentTask.Models.Campaign
@{
    ViewData["Title"] = "Create";
}
<div class="row pt-4">
    <div class="col-4">
        <h2 class="text-primary">Create a new Campaign</h2>
    </div>
    <div class="col-4">
    </div>
</div>
@if(TempData["NotEnoughMoney"] !=null)
    {
        <h2>@TempData["NotEnoughMoney"]</h2>
    }
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Insert Name"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Keywords" class="control-label"></label>
                <input asp-for="Keywords" class="form-control" value="Offer, Occasion, Cheapest, Best" />
                <span asp-validation-for="Keywords" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BidAmount" class="control-label"></label>
                <input asp-for="BidAmount" class="form-control" placeholder="0.0"/>
                <span asp-validation-for="BidAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CampaignFund" class="control-label"></label>
                <input asp-for="CampaignFund" class="form-control" placeholder="0.0"/>
                <span asp-validation-for="CampaignFund" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label">
                    @Html.DisplayNameFor(model => model.Status) <br/> @Html.DropDownListFor(model => model.Status, new SelectList(Enum.GetValues(typeof(Status))), "Select status", new { @class = "form-control" })
                </label>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Town" class="control-label">
                    @Html.DisplayNameFor(model => model.Town) <br/> @Html.DropDownListFor(model => model.Town, new SelectList(Enum.GetValues(typeof(City))), "Select city", new { @class = "form-control" })
                </label>
                <span asp-validation-for="Town" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Radius" class="control-label"></label>
                <input asp-for="Radius" class="form-control" placeholder="0.0"/>
                <span asp-validation-for="Radius" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>
<br/>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
